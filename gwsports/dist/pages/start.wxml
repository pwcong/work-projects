
    <view class="container">

        <view class="main">
            <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" circles="{{circles}}" markers="{{markers}}" bindmarkertap="markertap" show-location="show-location" style="width: 100%; height: 100%;"/>
        </view>

        <view class="row tools"  wx:if="{{startFlag}}">

            <view class="col left">
                {{duration}}
            </view>
            <view class="col right">
                <button bindtap="handleStopButtonClick">结束运动</button>
            </view>

        </view>

        <view class="row tools"  wx:else>

            <view class="col">
                <button bindtap="start">开始运动</button>
            </view>

        </view>

