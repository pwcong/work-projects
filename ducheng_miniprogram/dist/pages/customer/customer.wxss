.toolbar{height:150rpx;width:100%;box-shadow:0 1px 2px 0 rgba(0,0,0,0.11);background-color:white;position:relative;box-sizing:border-box;padding-left:34rpx;display:flex;flex-flow:column nowrap;justify-content:center}.toolbar .user-name{font-size:17px;margin-bottom:6rpx}.toolbar .user-name image{position:relative;bottom:-12rpx;width:38rpx;height:38rpx}.toolbar .user-company{padding-left:50rpx;font-size:11px}.toolbar .action{position:absolute;top:50%;right:28rpx;transform:translateY(-50%);width:122rpx;height:60rpx;text-align:center;line-height:60rpx;font-size:14px;color:#09BB07;border:1px solid #09BB07;border-radius:8rpx;transition:background-color 0.1s, color 0.1s}.toolbar .action:active{background-color:#09BB07;color:white}.main{flex:1;box-sizing:border-box;overflow:hidden;position:relative;padding:30rpx}.main .section{width:100%;background-color:white;display:flex;justify-content:center;align-items:center;flex-flow:row wrap;box-sizing:border-box}.main .balance{padding:20rpx 0;height:200rpx;border-bottom:1px solid #e5e5e5}.main .balance view{width:100%;text-align:center}.main .balance view:nth-child(1){font-size:14px;color:#4a4a4a}.main .balance view:nth-child(2){font-size:36px;color:#d30a0a}.main .qrcode{padding:40rpx}.main .qrcode-num{width:100%;font-size:18px;margin-top:24rpx;text-align:center;columns:#353535}.main .action{margin-top:40rpx;background-color:transparent;font-size:14px;color:#61749B;letter-spacing:0.69px}.main .logo{width:152rpx;height:48rpx;position:absolute;bottom:30rpx;left:50%;transform:translateX(-50%)}
