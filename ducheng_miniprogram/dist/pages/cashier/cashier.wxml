
    <view class="container">
        <view class="toolbar">

            <view class="userinfo" bindtap="handleUserInfoButtonClick">
                <image src="{{peopleIconUrl}}"/>
                {{userInfo.nickName}}
            </view>

            <view class="action" bindtap="handleBillButtonClick">对账</view>

        </view>

        <view class="main">
            <view class="main-wrap">

                <view class="shop-name">{{shop.name}}</view>

                <view class="shop-action-price"  wx:if="{{available}}">
                    <view>请输入收款金额</view>
                    <view class="shop-action-price-wrap">
                        <text>￥</text>
                        <input type="digit" bindinput="handleAmountChange"/>
                    </view>
                </view>

                <view  wx:if="{{!available}}" style="padding: 36rpx; 72rpx; text-align: center; color: #D30A0A;">

                    <text>{{reason}}</text>

                </view>

            </view>

            <view class="shop-action-scan" bindtap="handleScanButtonClick" wx:if="{{available}}">扫码收款</view>

            <view class="shop-action-scan-code" bindtap="handleScanCodeButtonClick" wx:if="{{available}}">
                手动输入识别号 >
                <text class="fa fa-angle-right"/>
            </view>

            <view class="shop-details">
                今日收费：{{shop.counts}}次<text>|</text>总额：{{shop.money}}元
            </view>

        </view>
    </view>