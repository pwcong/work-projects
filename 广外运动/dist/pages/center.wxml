                </view>

                <image src="{{honorLabel}}" class="label"/>

            </view>

            <view class="section level"  wx:if="{{level}}">
                <view class="section-head">
                    <image src="../assets/imgs/icon_rocket.png"/> 里程碑
                    <view class="icon icon-label">{{level}}</view>

                </view>

                <view class="level-chart">

                    
    <view class="my-progress" style="">

        <view  wx:if="{{$myprogress$showLabel}}" class="my-progress-label" style="color: {{$myprogress$color}};">
            <block wx:for="{{$myprogress$labels}}" wx:for-index="$myprogress$index" wx:for-item="$myprogress$item" wx:key="$myprogress$key">
                <text>
                    {{$myprogress$item}}
                </text>
            </block>
        </view>

        <view class="my-progress-main" style="background-color: {{$myprogress$backgroundColor}}; height: {{$myprogress$height}}rpx; border-radius: {{$myprogress$borderRadius ? $myprogress$height / 2 + 'rpx' : '0' }};">
            <view style="background-color: {{$myprogress$color}}; width: {{$myprogress$progress}}%;"/>
        </view>

    </view>


